const fs = require("fs");

async function updateSchedule() {
    const today = new Date();
    const dateList = generateDateList(today, 3); // Cáº­p nháº­t tá»« hÃ´m nay + 3 ngÃ y

    console.log("ğŸ“… Danh sÃ¡ch ngÃ y cáº­p nháº­t:", dateList);

    fs.writeFileSync("schedule.json", JSON.stringify({ dates: dateList }, null, 2));
    console.log("âœ… Lá»‹ch sÃ¢n Ä‘Ã£ cáº­p nháº­t!");
}

// HÃ m táº¡o danh sÃ¡ch ngÃ y
function generateDateList(startDate, daysCount) {
    const result = [];
    for (let i = 0; i < daysCount; i++) {
        const d = new Date(startDate);
        d.setDate(startDate.getDate() + i);
        result.push(d.toISOString().split("T")[0]);
    }
    return result;
}

updateSchedule().catch(console.error);
